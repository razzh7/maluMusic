@import "../../static/iconfont/iconfont.wxss";
@import "index.skeleton.wxss";
/* 轮播图部分 */
.banners {
    width: 100%;
    height: 300rpx;
}

.banners image {
    width: 100%;
    height: 100%;
}

/* 导航栏部分 */
.nav-container {
    display: flex;
}

.nav-item {
    display: flex;
    flex-direction: column;
    align-items: center;
    width: 20%;
    text-align: center;
}

.nav-container .iconfont {
    width: 100rpx;
    height: 100rpx;
    margin: 20rpx 0;
    border-radius: 50%;
    text-align: center;
    line-height: 100rpx;
    background: rgb(240, 19, 19);
    color: #ffffff;
    font-size: 50rpx;
}

.nav-container text {
    font-size: 26rpx;
}

/* 推荐歌曲区域 */
.recommend-songs {
    padding: 20rpx;
}

.recommend-songs .recommend-scroll {
    display: flex;
    height: 290rpx;

}

.recommend-songs .recommend-scroll .songs-wrapper {
    width: 200rpx;
    height: 200rpx;
    margin-right: 10rpx;
    /* white-space: nowrap; 不需要设置这个属性也能滚动*/
}

.recommend-songs .recommend-scroll .songs-wrapper image {
    width: 100%;
    height: 100%;
    border-radius: 15rpx;
}

.recommend-songs .recommend-scroll .songs-wrapper .mult-txt {
    /* 多行文本溢出隐藏 省略号代替*/
    width: 200rpx;
    height: 70rpx;  /*设置高度，以便成两行*/
    overflow: hidden;
    text-overflow: ellipsis;
    display: -webkit-box;
    -webkit-box-orient: vertical; /*设置对其模式*/
    -webkit-line-clamp: 2; /*设置多行的行数*/
    font-size: 26rpx;
}

/* 歌曲排行榜 */
.topRank {
    padding: 20rpx;
}

.topRank .hot-songs {
    height: 400rpx;
}

.topRank .hot-songs .top-context {
    font-size: 26rpx;
    margin-bottom: 30rpx;
}

swiper-item {
    background-color: #fbfbfb;
}

.topRank .hot-songs .music-item {
    display: flex;
    align-items: center;
    width: 96%;
    margin-bottom: 10rpx;
}

.topRank .hot-songs .music-item image {
    width: 100rpx;
    height: 100rpx;
    border-radius: 10rpx;
}

.topRank .hot-songs .music-item .count {
    width: 100rpx;
    height: 100rpx;
    line-height: 100rpx;
    text-align: center;
    font-size: 32rpx;
    font-size: bold;
}

.songName {
    display: block;
    max-width: 300rpx;
    /* 设置超过最大宽度就触发省略 */
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    font-size: 30rpx;
}

.singerName {
    font-size: 24rpx;
}