<view class="video-container">
    <view class="video-header">
        <image src="/static/img/video/video.png"></image>
        <view class="search">搜索歌曲</view>
        <image src="/static/img/logo.png"></image>
    </view>
    <!-- 导航栏区域 -->
    <scroll-view class="video-nav" 
                 enable-flex
                 scroll-x
                 scroll-into-view="{{ 'animation' + tagId }}"
                 scroll-with-animation>
        <view id="{{ 'animation' + item.id }}"
              class="video-nav-tag" 
              wx:for="{{ videoTag }}"
              wx:key="id"
              bindtap="currTag"
              >
            <view class="tag-content {{ tagId == item.id ? 'active' : ''}}"
            data-id="{{ item.id }}"
            >
                {{ item.name }}
            </view>
        </view>
    </scroll-view>
    <!-- 视频区域 -->
    <scroll-view class="video-info" 
                 scroll-y
                 bindrefresherrefresh="handleRefresh"
                 refresher-enabled
                 refresher-triggered="{{ isTriggered }}">
        <view class="scrollItem" 
              wx:for="{{ videoInfo }}"
              wx:key="id">
            <video id="{{ item.data.vid }}"
                   src="{{ item.data.urlInfo.url }}" 
                   class="video"
                   bindtap="handleStop"
                   poster="{{ item.data.coverUrl }}" 
                   wx:if="{{ videoId == item.data.vid }}"
                   autoplay
                   object-fit="fill">
            </video>
            <!-- 使用image封面图优化video标签渲染过多导致的视频加载缓慢问题 -->
            <image id="{{ item.data.vid }}"
                   src="{{ item.data.coverUrl }}" 
                   class="video"
                   bindtap="handleStop" 
                   wx:else>
            </image>
            <view class="title">
                <text>{{ item.data.title }}</text>
            </view>
            <view class="footer">
                <view>                
                    <image class="avatar" src="{{ item.data.creator.avatarUrl }}"></image>
                    <text class="nickname">{{ item.data.creator.nickname }}</text>
                </view>
                <view class="comments_praised">
                    <view class="item">
                        <text class="iconfont icon-buoumaotubiao15"></text>
                        <text class="count">{{item.data.praisedCount}}</text>
                    </view>
                    <view class="item">
                        <text class="iconfont icon-pinglun1"></text>
                        <text class="count">{{item.data.commentCount}}</text>
                    </view>
                </view>
            </view>
        </view>
    </scroll-view>
</view>