@import "../../static/iconfont/iconfont.wxss";
.video-container {
    padding: 20rpx 20rpx 0 20rpx;
}
.video-container .video-header {
    display: flex;
    align-items: center;
    height: 60rpx;
}
.video-container .video-header .search {
    flex: 1;
    margin: 0 10rpx;
    border: 1rpx solid #eeeeee;
    border-radius: 20rpx;
    text-align: center;
    line-height: 60rpx;
    font-size: 26rpx;
    color: #d43c33;
}
.video-container .video-header image {
    width: 45rpx;
    height: 45rpx;
}
/* 导航部分 */
.video-nav {
    display: flex;
    height: 50rpx;
    margin: 20rpx 0;
}
.video-nav .video-nav-tag{
    font-size: 30rpx;
    margin-right: 20rpx;
}
.video-nav .video-nav-tag .tag-content {
    white-space: nowrap;
}
.active {
    /* font-size: 32rpx; */
    font-weight: bold;
    border-bottom: 2rpx solid #d43c33;
}
/* 视频区域 */
.video-info {
    width: 100%;
    height: calc(100vh - 170rpx);
}
.video-info .scrollItem {
    width: 680rpx;
    margin: 0 auto;
}
.video-info .scrollItem .video {
    width: 100%;
    height: 360rpx;
    border-radius: 20rpx;
}
.video-info .scrollItem .title {
    font-size: 30rpx;
    border-bottom: 2rpx solid #cccccc;
}
.video-info .scrollItem .title text {
    display: block;
    max-width: 600rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.video-info .scrollItem .footer {
    display: flex;
    justify-content: space-between;
    height: 80rpx;
    margin-top: 20rpx;
}
.video-info .scrollItem .footer .avatar {
    width: 60rpx;
    height: 60rpx;
    margin-right: 10rpx;
    border-radius: 50%;
    vertical-align: middle;
}
.video-info .scrollItem .footer .nickname {
    font-size: 26rpx;
}
.video-info .scrollItem .footer .comments_praised {
    position: relative;
    width: 150rpx;
}
.video-info .scrollItem .footer .comments_praised .iconfont{
    font-size: 26rpx;
}
.video-info .scrollItem .footer .comments_praised .item {
    position: relative;
    display: inline-block;
}
.video-info .scrollItem .footer .comments_praised .item:nth-of-type(1) {
    margin-right: 50rpx;
}
.video-info .scrollItem .footer .comments_praised .item .count {
    position: absolute;
    top: -10rpx;
    font-size: 20rpx;
}